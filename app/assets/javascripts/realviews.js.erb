
$(document).on("click", '.link', function() {

    var id = $(this).attr('id');
    $.ajax({
                 url: "/posts/view", // Route to the Script Controller method
                type: "POST",
            dataType: "json",
             headers: {
              "Content-Type": "application/json"
             }, 
            data: JSON.stringify({ post_id: id }), // This goes to Controller in params hash, i.e. params[:file_name]
            complete: function() {},
             success: function(data, textStatus, xhr) {
                        $(".view-" + id).html(data);
                      },
               error: function(jqXHR, textStatus, errorThrown) {
                        console.log(textStatus, errorThrown);
                      }
    });
});

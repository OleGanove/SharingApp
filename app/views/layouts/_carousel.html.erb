</div>




<script type="text/javascript">
    $(document).ready(function(){
    	var owl = $("#owl-carousel");

        owl.owlCarousel({
           	slideSpeed: 300,
           	paginationSpeed: 400,
           	items: 3
        });

        // Custom navigation events

        $(".next").click(function(){
        	owl.trigger('owl.next');
        })
        $(".prev").click(function(){
        	owl.trigger('owl.prev');
        })

    });
</script>
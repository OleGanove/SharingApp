<% if current_user.group == 0 || current_user.group == 1 %>
  <i class="fa fa-arrow-circle-left btn prev arrows" aria-hidden="true"></i>
<% end %>

<div class="col-md-12 middle-carousel">

<div id="owl-carousel">

  <% if current_user.group == 0 || current_user.group == 1 %>
    <% @pinned.each do |post| %>
      <div>
        <% if post.is_a?(Post) %>
          <%= render :partial => "layouts/index-preview-bubble", :locals => {:post => post} %> 
        <% else %>
          <%= render :partial => "layouts/index_preview_fposts", :locals => {:post => post} %>  
        <% end %>
      </div>
    <% end %>
  <% else %>
    <% @random_fposts.each do |post| %>
      <div>
        <% if post.is_a?(Post) %>
          <%= render :partial => "layouts/index-preview-bubble", :locals => {:post => post} %> 
        <% else %>
          <%= render :partial => "layouts/index_preview_fposts", :locals => {:post => post} %>  
        <% end %>
      </div>
    <% end %>

  <% end %>

  </div>

</div>

<% if current_user.group == 0 || current_user.group == 1 %>
  <i class="fa fa-arrow-circle-right btn next arrows" aria-hidden="true"></i>
<% end %>









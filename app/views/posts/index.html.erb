<% if flash[:notice] == "Dein Beitrag wurde erfolgreich gespeichert." %>
  <% content_for :title, "Beitrag erfolgreich erstellt" %>
<% end %>

<% if current_user.group == 0 || current_user.group == 1 %>
  <div class="info col-md-6">
  	<h2>Angepinnte Beiträge</h2>
  	<p>
  		Hier findest du die Créme de la Créme. Artikel, die von unseren Kuratoren als sehr lesenswert eingeschätzt und angepinnt wurden. 
  	</p>
  </div>
<% else %>
  <div class="info col-md-6">
    <h2>Zufällige Beiträge</h2>
    <p>
      Hier findest du zufällige Artikel von unseren Kuratoren. Bei jedem Refresh der Seite kommen andere zufällige Artikel.
    </p>
  </div>  
<% end %>

<%= render "layouts/carousel" %>

<div class="info col-md-12">
	<h2>Alle Beiträge</h2>
</div>


<% @all_posts.in_groups_of(3).each do |post_array| %>
  <div class="row">
  <% post_array.each_with_index do |post, index| %>
    <div class="col-md-4">
      <% if post.is_a?(Post) %>
        <%= render :partial => "layouts/index-preview-bubble", :locals => {:post => post} %> 
      <% else %>
        <%= render :partial => "layouts/index_preview_fposts", :locals => {:post => post } %>  
      <% end %>
    </div>
  <% end %>
  </div>
<% end %>

<div class="col-md-12">
  <%= will_paginate @all_posts, previous_label: "Vorherige", next_label: "Nächste" %>
</div>

<div class="forms new-post">
<%= form_for @post do |f| %>

  <%= f.label :link, "Link" %><br>
  <% if @post.errors[:link] %>
      <% @post.errors[:link].each do |msg| %>
        <p class="error">*<%= msg %></p>
     <% end %>
  <% end %>
  <%= f.text_field :link, class: "form-control"%>


  <%= f.label :description, "Kommentiere deinen Link" %><br>
  <% if @post.errors[:description] %>
      <% @post.errors[:description].each do |msg| %>
        <p class="error">*<%= msg %></p>
      <% end %>
  <% end %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.check_box :pinned %>
  <%= f.label "Beitrag oben anpinnen?" %>


  <%= f.submit class: "btn btn-primary" %>

<% end %>
</div>

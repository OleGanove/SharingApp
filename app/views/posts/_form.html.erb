<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  	<h2><%= pluralize(@post.errors.count, "Fehler") %></h2>
  	<ul>
  	  <% @post.errors.full_messages.each do |msg| %>
  	  	<li><%= msg %></li>
  	  <% end %>
  	</ul>
  <% end %>

  <%= f.label :title, "Titel" %><br>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :description, "Beschreibung" %><br>
  <%= f.text_area :description %>

  <br>
  <br>

  <%= f.label :link, "Link" %><br>
  <%= f.text_field :link %>

  <br>
  <br>

  <%= f.submit %>

<% end %>